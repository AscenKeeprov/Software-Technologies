<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/user/login">
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="logEmail">Email</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="logEmail" placeholder="Email" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="logPassword">Password</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="logPassword" placeholder="Password" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a class="btn btn-default" href="/">Cancel</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>