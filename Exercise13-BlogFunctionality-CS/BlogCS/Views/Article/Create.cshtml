@model BlogCS.Models.Article
@{ ViewBag.Title = "Create"; }

<div class="container">
    <h2>New Article</h2>
    @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(String.Empty, new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(a => a.Title, new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Content, new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextAreaFor(a => a.Content, new { @class = "form-control", @rows = "14" })
            @Html.ValidationMessageFor(a => a.Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-5">
            <input type="submit" class="btn btn-success" value="Publish" />
            @Html.ActionLink("Cancel", "List", "Article", null, new { @class = "btn btn-default" })
        </div>
    </div>
    }
</div>