@model BlogCS.Models.Article
@{ ViewBag.Title = "Delete"; }

<div class="container">
    <h2>Delete Article</h2>
    @using (Html.BeginForm("Delete", "Article", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(a => a.Title, new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextBoxFor(a => a.Title, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Content, new { @class = "control-label col-sm-2" })
        <div class="col-sm-8">
            @Html.TextAreaFor(a => a.Content, new { @class = "form-control", @rows = "7",
            @style = "overflow:auto;resize:none", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        <div class="alert-danger">Are you sure you want to delete this article?</div>
        <div class="col-sm-4 col-sm-offset-5">
            <input type="submit" class="btn btn-danger" value="Yes" />
            @Html.ActionLink("No", "Details", "Article", new { @id = Model.Id }, new { @class = "btn btn-default" })
        </div>
    </div>
    }
</div>