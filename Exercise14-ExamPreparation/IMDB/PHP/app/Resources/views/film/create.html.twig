{% extends "base.html.twig" %}

{% block main %}
<h1>Create Film</h1>
<section>
    <form method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="film[name]" value = "{{ film.name }}" />
            {{ form_errors(form.name) }}
            <label for="genre">Genre</label>
            <input type="text" id="genre" name="film[genre]" value = "{{ film.genre }}" />
            {{ form_errors(form.genre) }}
            <label for="director">Director</label>
            <input type="text" id="director" name="film[director]" value = "{{ film.director }}" />
            {{ form_errors(form.director) }}
            <label for="year">Year</label>
            <input type="text" id="year" name="film[year]" value = "{{ film.year }}" />
            {{ form_errors(form.year) }}
            {{ form_row(form._token) }}
            <button type="submit" class="accept">Create</button>
            <button type="button" onclick="location.href='/'" class="cancel">Cancel</button>
        </div>
    </form>
</section>
{% endblock %}