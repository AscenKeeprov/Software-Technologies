@model ToDoList.Models.Task
@{ ViewBag.Title = "Create Task"; }

<div id="create-wrapper">
    <section class="create">
        <article>
            @using (Html.BeginForm("Create", "Task", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <div class="row">
                <label for="task">Task:</label>
                @Html.TextBoxFor(t => t.Title, new { @id = "task" })
                @Html.ValidationMessageFor(t => t.Title, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <label for="comments">Comments:</label>
                @Html.TextAreaFor(t => t.Comments, new { @id = "comments" })
                @Html.ValidationMessageFor(t => t.Comments, "", new { @class = "text-danger" })
            </div>
	        <button type="submit">Create</button>
            <a href="/">Cancel</a>
            }
        </article>
    </section>
</div>