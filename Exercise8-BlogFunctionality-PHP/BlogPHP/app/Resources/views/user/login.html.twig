{% extends "base.html.twig" %}

{% block body %}
<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" name="login" action="{{ path("user_login") }}" method="POST">
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="logName">Username (e-mail)</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="logName" name="_username" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="logPassword">Password</label>
                    <div class="col-sm-4 ">
                        <input type="password" class="form-control" id="logPassword" name="_password" required/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                        <a class="btn btn-default" href="/">Cancel</a>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}