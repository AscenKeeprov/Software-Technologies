@model CalculatorCS.Models.Calculator
@{ ViewBag.Title = "Calculator"; }

<div class="well">
    @using (Html.BeginForm("Calculate", "Calculator", FormMethod.Post, new {
        @class = "form-inline",
        @id = "calcForm" }))
    {
    <fieldset>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.LeftOperand, new {
                    @class = "form-control",
                    @id = "leftOperand",
                    @placeholder = "Left Operand",
                    @required = "required" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                @Html.DropDownListFor(model => model.Operator, new[] {
                    new SelectListItem { Text = "+", Value = "+" },
                    new SelectListItem { Text = "-", Value = "-" },
                    new SelectListItem { Text = "*", Value = "*" },
                    new SelectListItem { Text = "/", Value = "/" },
                    new SelectListItem { Text = "%", Value = "%" },
                    new SelectListItem { Text = "^", Value = "^" },
                    new SelectListItem { Text = "√", Value = "√" }}, new {
                    @class = "form-control",
                    @id = "operator" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.RightOperand, new {
                   @class = "form-control",
                   @id = "rightOperand",
                   @placeholder = "Right Operand",
                   @required = "required" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1 ">
                <p>=</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.TextBoxFor(model => model.Result, null, new {
                   @class = "form-control",
                   @id = "result",
                   @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Calculate</button>
            </div>
        </div>
    </fieldset>
    }
</div>